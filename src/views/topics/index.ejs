<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <h1>Topics</h1>

      <button class="btn btn-primary" onclick="window.location.href = '/topics/new';">New Topic</button><br><br>

      <ul class="list-group">
<!-- #1 -->
        <% topics.forEach((topic) => { %>
<!-- #2 -->
          <li class="list-group-item">
            <a href="/topics/<%= topic.id %>"> <%= topic.title %> </a>
          </li>
        <% }) %>
      </ul>

    </main>
  </body>
</html>